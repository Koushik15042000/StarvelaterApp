    <!-- Base application theme. Material Components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#CF0052</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Menu Styles-->
    <style name="navigationTheme">

        <!--Color of Text and icon when it is selected-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Background color when selected-->
        <item name="colorControlHighlight">@color/colorAccent</item>

    </style>

    <!--Location Style-->

    <style name="AppTheme.FilterSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


</resources>
