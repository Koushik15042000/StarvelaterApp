<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/all_restaurants_card_placeholder_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@color/placeholder_bg"
            android:scaleType="centerCrop" />

        <!--<ImageView
            android:id="@+id/closed"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:tint="#FF4500"
            android:layout_alignStart="@id/most_popular_image"
            android:layout_alignEnd="@id/most_popular_image"
            android:src="@drawable/closed"/>-->

        <TextView
            android:id="@+id/all_restaurants_card_placeholder_title"
            android:layout_width="110dp"
            android:layout_height="18dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/all_restaurants_card_placeholder_image"
            android:background="@color/placeholder_bg"
            android:padding="5dp"
            android:textSize="14dp"
            android:textStyle="bold" />

        <!--<RatingBar
            android:id="@+id/most_popular_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_popular_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/most_popular_image"
            android:rating="4" />-->

        <TextView
            android:id="@+id/most_popular_description"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_below="@id/all_restaurants_card_placeholder_title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/all_restaurants_card_placeholder_image"
            android:background="@color/placeholder_bg"
            android:fontFamily="@font/muli"
            android:padding="5dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>