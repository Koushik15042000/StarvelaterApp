<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.restaurant.OrderedSummaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/restaurantToolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:theme="@style/CardView.Light"
                app:titleMarginStart="40dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/back_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@drawable/ic_arrow_back_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Summary"
                            android:textStyle="bold"
                            android:fontFamily="@font/muli"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginStart="10dp"
                            android:textColor="#000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </FrameLayout>
                <!--
                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content">

                              <ImageView
                                  android:id="@+id/back_button"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:padding="5dp"
                                  android:src="@drawable/ic_arrow_back_black_24dp" />

                              <ImageView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_alignParentEnd="true"
                                  android:layout_gravity="right"
                                  android:padding="5dp"
                                  android:src="@drawable/ic_search" />

                          </RelativeLayout>-->


            </androidx.appcompat.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/restaurantLayout"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="13dp"
                    android:tintMode="multiply"
                    android:tint="@color/colorPrimary"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_restaurant_24" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yati Restaurant"
                        android:textColor="#000"
                        android:fontFamily="@font/muli"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Items"
                            android:textSize="12dp"
                            android:id="@+id/totalQuantity"
                            android:fontFamily="@font/muli"
                            android:layout_gravity="left"
                            android:textColor="@color/colorDimGrey" />
                        <View
                            android:layout_width="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="5dp"
                            android:layout_height="15dp"
                            android:background="@color/colorDimGrey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APT: 37MINS"
                            android:textSize="12dp"
                            android:fontFamily="@font/muli"
                            android:layout_gravity="left"
                            android:textColor="@color/colorDimGrey" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!--
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGray" />
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="13dp"
                    android:id="@+id/locationicon"
                    android:foregroundGravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:tintMode="multiply"
                    android:tint="@color/colorPrimary"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_my_location_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_toRightOf="@id/locationicon"
                    android:textColor="#000"
                    android:padding="4dp"
                    android:fontFamily="@font/muli"
                    android:id="@+id/addresstext"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/restAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addresstext"
                    android:layout_toRightOf="@id/locationicon"
                    android:gravity="left"
                    android:fontFamily="@font/muli"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:layout_alignParentEnd="true"
                    android:text="Near Bhanugudi Junction, Anand Theatre Complex,Kakinada Urban, Kakinada"
                    android:textColor="@color/colorDimGrey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightWhite" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orderedItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                tools:itemCount="9" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLightWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Type of Order"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/muli"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/restaurants"
                android:tint="@color/colorDimGrey" />

            <RadioGroup
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAKE AWAY"
                    android:id="@+id/dinein"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:fontFamily="@font/muli"
                    android:background="@color/colorPrimary"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRE ORDER"
                    android:id="@+id/preorder"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/terms_border"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightWhite" />


        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CHECK OUT "
            android:id="@+id/checkout"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli_black"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/terms_border"/>
    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>