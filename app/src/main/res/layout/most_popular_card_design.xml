<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/most_popular_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/paradise" />

        <TextView
            android:id="@+id/most_popular_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/most_popular_image"
            android:fontFamily="@font/muli_black"
            android:padding="5dp"
            android:text="Paradise Biryani"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:textStyle="bold" />

        <!--<RatingBar
            android:id="@+id/most_popular_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_popular_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/most_popular_image"
            android:rating="4" />-->

        <TextView
            android:id="@+id/most_popular_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_popular_title"
            android:layout_toRightOf="@id/most_popular_image"
            android:fontFamily="@font/muli"
            android:padding="5dp"
            android:text="Known For:\nLegendary Biryani"
            android:textSize="10dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>